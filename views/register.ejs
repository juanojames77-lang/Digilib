<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>DIGILIB | Create Account</title>

<!-- Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
/* ========== GOOGLE SCHOLAR INSPIRED COLOR PALETTE ========== */
:root {
  --google-blue: #4285f4;
  --google-red: #ea4335;
  --google-yellow: #fbbc05;
  --google-green: #34a853;
  --dark-bg: #202124;
  --light-bg: #f8f9fa;
  --card-bg: #ffffff;
  --text-primary: #3c4043;
  --text-secondary: #5f6368;
  --border-color: #dadce0;
  --hover-bg: #f1f3f4;
  --error-bg: #fce8e6;
  --error-text: #a50e0e;
  --weak-color: #ea4335;
  --medium-color: #fbbc05;
  --strong-color: #34a853;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html, body {
  height: 100%;
  font-family: 'Google Sans', 'Segoe UI', Roboto, sans-serif;
  overflow-x: hidden;
}

body {
  background: var(--light-bg);
  display: flex;
  flex-direction: row;
}

/* ========== LOGO SECTION ========== */
.logo-container {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #f5f5f5 0%, #ffffff 100%);
  padding: 40px;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* Animated background pattern */
.logo-container::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(66,133,244,0.03) 0%, transparent 50%);
  animation: rotate 30s linear infinite;
  z-index: 0;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.logo-container img {
  max-width: 280px;
  width: 80%;
  height: auto;
  margin-bottom: 20px;
  position: relative;
  z-index: 1;
  filter: drop-shadow(0 10px 20px rgba(0,0,0,0.1));
  transition: transform 0.3s ease;
}

.logo-container img:hover {
  transform: scale(1.05);
}

/* Colorful DIGILIBRARY logo text */
.logo-text {
  margin-top: 20px;
  font-size: 3em;
  font-weight: 800;
  font-family: 'Google Sans', 'Arial Black', sans-serif;
  letter-spacing: 2px;
  position: relative;
  z-index: 1;
  text-shadow: 0 4px 12px rgba(0,0,0,0.1);
}

.logo-text span {
  display: inline-block;
  transition: transform 0.2s ease;
}

.logo-text span:hover {
  transform: translateY(-5px);
}

/* Google colors for DIGILIBRARY */
.logo-text span:nth-child(1) { color: var(--google-blue); } /* D */
.logo-text span:nth-child(2) { color: var(--google-red); } /* I */
.logo-text span:nth-child(3) { color: var(--google-yellow); } /* G */
.logo-text span:nth-child(4) { color: var(--google-blue); } /* I */
.logo-text span:nth-child(5) { color: var(--google-green); } /* L */
.logo-text span:nth-child(6) { color: var(--google-red); } /* I */
.logo-text span:nth-child(7) { color: var(--google-yellow); } /* B */
.logo-text span:nth-child(8) { color: var(--google-blue); } /* R */
.logo-text span:nth-child(9) { color: var(--google-green); } /* A */
.logo-text span:nth-child(10) { color: var(--google-red); } /* R */
.logo-text span:nth-child(11) { color: var(--google-yellow); } /* Y */

/* Tagline */
.tagline {
  margin-top: 20px;
  color: var(--text-secondary);
  font-size: 1.1em;
  position: relative;
  z-index: 1;
}

.tagline i {
  color: var(--google-blue);
  margin: 0 5px;
}

/* ========== FORM SECTION ========== */
.form-container {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, var(--google-green) 0%, #34a853 100%);
  position: relative;
  overflow: hidden;
}

/* Animated circles in background */
.form-container::before {
  content: '';
  position: absolute;
  width: 150%;
  height: 150%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 50%);
  animation: pulse 15s ease infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.5; }
  50% { transform: scale(1.2); opacity: 0.8; }
}

.form-box {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  padding: 48px;
  border-radius: 24px;
  width: 80%;
  max-width: 440px;
  color: var(--text-primary);
  box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  position: relative;
  z-index: 1;
  border: 1px solid rgba(255,255,255,0.2);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.form-box:hover {
  transform: translateY(-5px);
  box-shadow: 0 30px 50px rgba(0,0,0,0.3);
}

.form-label {
  font-size: 2em;
  margin-bottom: 30px;
  font-weight: 600;
  text-align: center;
  color: var(--text-primary);
  position: relative;
}

.form-label::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 60px;
  height: 4px;
  background: linear-gradient(90deg, var(--google-green), var(--google-blue));
  border-radius: 2px;
}

form {
  display: flex;
  flex-direction: column;
}

/* Input fields with icons */
.input-group {
  position: relative;
  margin: 8px 0;
}

.input-group i {
  position: absolute;
  left: 16px;
  top: 50%;
  transform: translateY(-50%);
  color: var(--text-secondary);
  font-size: 18px;
  transition: color 0.2s;
}

.input-group input {
  width: 100%;
  padding: 16px 16px 16px 48px;
  margin: 0;
  border-radius: 12px;
  border: 2px solid var(--border-color);
  font-size: 16px;
  transition: all 0.3s;
  background: white;
  color: var(--text-primary);
}

.input-group input:focus {
  border-color: var(--google-green);
  outline: none;
  box-shadow: 0 0 0 4px rgba(52,168,83,0.1);
}

.input-group input:focus + i {
  color: var(--google-green);
}

.input-group input::placeholder {
  color: var(--text-secondary);
  opacity: 0.7;
}

/* Password strength meter */
.strength-meter {
  margin: 12px 0 8px;
}

.strength-labels {
  display: flex;
  justify-content: space-between;
  margin-bottom: 4px;
}

.strength-label {
  font-size: 12px;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.strength-label.active {
  font-weight: 600;
}

.strength-label.weak.active { color: var(--weak-color); }
.strength-label.medium.active { color: var(--medium-color); }
.strength-label.strong.active { color: var(--strong-color); }

.strength-bar {
  display: flex;
  gap: 6px;
  height: 6px;
  margin-bottom: 8px;
}

.strength-segment {
  flex: 1;
  height: 100%;
  background: var(--border-color);
  border-radius: 3px;
  transition: all 0.3s;
}

.strength-segment.weak { background: var(--weak-color); }
.strength-segment.medium { background: var(--medium-color); }
.strength-segment.strong { background: var(--strong-color); }

.strength-text {
  font-size: 13px;
  margin-top: 8px;
  display: flex;
  align-items: center;
  gap: 6px;
}

.strength-text i {
  font-size: 14px;
}

.strength-text.weak { color: var(--weak-color); }
.strength-text.medium { color: var(--medium-color); }
.strength-text.strong { color: var(--strong-color); }

/* Password requirements */
.password-requirements {
  background: var(--hover-bg);
  padding: 16px;
  border-radius: 12px;
  margin: 16px 0 8px;
  font-size: 13px;
}

.requirements-title {
  font-weight: 600;
  margin-bottom: 10px;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  gap: 6px;
}

.requirements-list {
  list-style: none;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 8px;
}

.requirements-list li {
  display: flex;
  align-items: center;
  gap: 6px;
  color: var(--text-secondary);
}

.requirements-list li i {
  font-size: 12px;
  width: 16px;
}

.requirements-list li.valid {
  color: var(--strong-color);
}

.requirements-list li.valid i {
  color: var(--strong-color);
}

/* Register button */
.register-btn {
  padding: 16px;
  margin-top: 16px;
  border: none;
  border-radius: 30px;
  background: var(--google-green);
  color: white;
  font-weight: 600;
  font-size: 16px;
  cursor: pointer;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  position: relative;
  overflow: hidden;
}

.register-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.register-btn:hover::before {
  width: 300px;
  height: 300px;
}

.register-btn:hover {
  background: #2d9649;
  transform: translateY(-2px);
  box-shadow: 0 10px 20px rgba(52,168,83,0.3);
}

.register-btn i {
  font-size: 18px;
  transition: transform 0.3s;
}

.register-btn:hover i {
  transform: translateX(5px);
}

/* Error message */
.error {
  background: var(--error-bg);
  color: var(--error-text);
  padding: 14px 16px;
  border-radius: 12px;
  margin-bottom: 24px;
  font-size: 14px;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 10px;
  border-left: 4px solid var(--google-red);
}

.error i {
  font-size: 18px;
  color: var(--google-red);
}

/* Switch to login */
.switch {
  margin-top: 25px;
  text-align: center;
  cursor: pointer;
  color: var(--google-green);
  font-weight: 500;
  font-size: 15px;
  padding: 12px;
  border-radius: 30px;
  transition: all 0.3s;
  border: 2px solid transparent;
}

.switch:hover {
  background: rgba(52,168,83,0.05);
  border-color: var(--google-green);
}

.switch i {
  margin-left: 8px;
  transition: transform 0.3s;
}

.switch:hover i {
  transform: translateX(5px);
}

/* Divider */
.divider {
  display: flex;
  align-items: center;
  text-align: center;
  color: var(--text-secondary);
  font-size: 14px;
  margin: 20px 0;
}

.divider::before,
.divider::after {
  content: '';
  flex: 1;
  border-bottom: 1px solid var(--border-color);
}

.divider span {
  margin: 0 10px;
}

/* Terms and privacy */
.terms {
  margin-top: 20px;
  font-size: 12px;
  color: var(--text-secondary);
  text-align: center;
}

.terms a {
  color: var(--google-green);
  text-decoration: none;
  font-weight: 500;
}

.terms a:hover {
  text-decoration: underline;
}

/* ========== DARK MODE ========== */
.dark-mode {
  background: var(--dark-bg);
}

.dark-mode .logo-container {
  background: linear-gradient(135deg, #2d2e30 0%, #3c4043 100%);
}

.dark-mode .logo-container img {
  filter: drop-shadow(0 10px 20px rgba(0,0,0,0.3));
}

.dark-mode .form-box {
  background: rgba(45, 46, 48, 0.95);
}

.dark-mode .form-label {
  color: #e8eaed;
}

.dark-mode .input-group input {
  background: #3c4043;
  border-color: #5f6368;
  color: #e8eaed;
}

.dark-mode .input-group i {
  color: #9aa0a6;
}

.dark-mode .input-group input:focus {
  border-color: var(--google-green);
  background: #4a4d51;
}

.dark-mode .password-requirements {
  background: #3c4043;
}

.dark-mode .requirements-title {
  color: #9aa0a6;
}

.dark-mode .requirements-list li {
  color: #9aa0a6;
}

.dark-mode .divider {
  color: #9aa0a6;
}

.dark-mode .divider::before,
.dark-mode .divider::after {
  border-bottom-color: #5f6368;
}

/* ========== MOBILE RESPONSIVE ========== */
@media (max-width: 768px) {
  body {
    flex-direction: column;
  }
  
  .logo-container, 
  .form-container {
    width: 100%;
    height: auto;
    padding: 30px 20px;
  }
  
  .logo-container {
    padding: 40px 20px 20px;
  }
  
  .logo-container img {
    max-width: 180px;
  }
  
  .logo-text {
    font-size: 2.2em;
  }
  
  .tagline {
    font-size: 1em;
  }
  
  .form-box {
    width: 95%;
    padding: 32px 24px;
  }
  
  .form-label {
    font-size: 1.8em;
  }
  
  .requirements-list {
    grid-template-columns: 1fr;
  }
}

/* Tablet adjustments */
@media (min-width: 769px) and (max-width: 1024px) {
  .logo-text {
    font-size: 2.5em;
  }
  
  .form-box {
    padding: 40px 32px;
  }
}

/* Loading state for register button */
.register-btn.loading {
  pointer-events: none;
  opacity: 0.8;
}

.register-btn.loading i {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
</style>
</head>
<body>

<div class="logo-container">
  <img src="/logo.png" alt="DIGILIBRARY Logo">
  <div class="logo-text">
    <span>D</span><span>I</span><span>G</span><span>I</span><span>L</span><span>I</span><span>B</span><span>R</span><span>A</span><span>R</span><span>Y</span>
  </div>
  <div class="tagline">
    <i class="fas fa-graduation-cap"></i> Join DIGILIB Today <i class="fas fa-book-open"></i>
  </div>
</div>

<div class="form-container">
  <div class="form-box">
    <div class="form-label">Create Account</div>
    
    <% if (error) { %>
      <div class="error">
        <i class="fas fa-exclamation-circle"></i>
        <%= error %>
      </div>
    <% } %>
    
    <form action="/register" method="POST" id="registerForm">
      <div class="input-group">
        <i class="fas fa-user"></i>
        <input type="text" name="username" placeholder="Username" required>
      </div>
      
      <div class="input-group">
        <i class="fas fa-lock"></i>
        <input type="password" id="password" name="password" placeholder="Password" required>
      </div>
      
      <!-- Password strength meter -->
      <div class="strength-meter">
        <div class="strength-labels">
          <span class="strength-label weak" id="weakLabel">Weak</span>
          <span class="strength-label medium" id="mediumLabel">Medium</span>
          <span class="strength-label strong" id="strongLabel">Strong</span>
        </div>
        <div class="strength-bar">
          <div class="strength-segment" id="segment1"></div>
          <div class="strength-segment" id="segment2"></div>
          <div class="strength-segment" id="segment3"></div>
        </div>
        <div class="strength-text" id="strengthText"></div>
      </div>
      
      <!-- Password requirements -->
      <div class="password-requirements">
        <div class="requirements-title">
          <i class="fas fa-shield-alt"></i> Password must contain:
        </div>
        <ul class="requirements-list">
          <li id="req-length"><i class="far fa-circle"></i> At least 6 characters</li>
          <li id="req-letter"><i class="far fa-circle"></i> At least 1 letter</li>
          <li id="req-number"><i class="far fa-circle"></i> At least 1 number</li>
          <li id="req-special"><i class="far fa-circle"></i> At least 1 special character</li>
        </ul>
      </div>
      
      <button type="submit" class="register-btn" id="registerBtn">
        <span>Create Account</span>
        <i class="fas fa-user-plus"></i>
      </button>
    </form>
    
    <div class="divider">
      <span>Already have an account?</span>
    </div>
    
    <div class="switch" id="goLogin">
      Sign In <i class="fas fa-arrow-right"></i>
    </div>
    
    <div class="terms">
      By creating an account, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>
    </div>
  </div>
</div>

<script>
const password = document.getElementById('password');
const strengthText = document.getElementById('strengthText');
const segment1 = document.getElementById('segment1');
const segment2 = document.getElementById('segment2');
const segment3 = document.getElementById('segment3');
const weakLabel = document.getElementById('weakLabel');
const mediumLabel = document.getElementById('mediumLabel');
const strongLabel = document.getElementById('strongLabel');

// Requirement elements
const reqLength = document.getElementById('req-length');
const reqLetter = document.getElementById('req-letter');
const reqNumber = document.getElementById('req-number');
const reqSpecial = document.getElementById('req-special');

// Password strength checker
password.addEventListener('input', () => {
  const val = password.value;
  
  // Check requirements
  const hasLength = val.length >= 6;
  const hasLetter = /[A-Za-z]/.test(val);
  const hasNumber = /[0-9]/.test(val);
  const hasSpecial = /[^A-Za-z0-9]/.test(val);
  
  // Update requirement indicators
  updateRequirement(reqLength, hasLength);
  updateRequirement(reqLetter, hasLetter);
  updateRequirement(reqNumber, hasNumber);
  updateRequirement(reqSpecial, hasSpecial);
  
  // Calculate strength
  let strength = 0;
  if (hasLength) strength++;
  if (hasLetter) strength++;
  if (hasNumber) strength++;
  if (hasSpecial) strength++;
  
  // Reset all segments and labels
  segment1.classList.remove('weak', 'medium', 'strong');
  segment2.classList.remove('weak', 'medium', 'strong');
  segment3.classList.remove('weak', 'medium', 'strong');
  weakLabel.classList.remove('active');
  mediumLabel.classList.remove('active');
  strongLabel.classList.remove('active');
  strengthText.classList.remove('weak', 'medium', 'strong');
  
  // Set strength meter
  if (val.length === 0) {
    strengthText.textContent = '';
    return;
  }
  
  if (val.length < 6 || strength < 2) {
    // Weak
    segment1.classList.add('weak');
    weakLabel.classList.add('active');
    strengthText.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Weak password';
    strengthText.classList.add('weak');
  } else if (strength >= 2 && strength < 4) {
    // Medium
    segment1.classList.add('medium');
    segment2.classList.add('medium');
    mediumLabel.classList.add('active');
    strengthText.innerHTML = '<i class="fas fa-exclamation-circle"></i> Medium password';
    strengthText.classList.add('medium');
  } else if (strength === 4) {
    // Strong
    segment1.classList.add('strong');
    segment2.classList.add('strong');
    segment3.classList.add('strong');
    strongLabel.classList.add('active');
    strengthText.innerHTML = '<i class="fas fa-check-circle"></i> Strong password';
    strengthText.classList.add('strong');
  }
});

function updateRequirement(element, isValid) {
  const icon = element.querySelector('i');
  if (isValid) {
    element.classList.add('valid');
    icon.className = 'fas fa-check-circle';
  } else {
    element.classList.remove('valid');
    icon.className = 'far fa-circle';
  }
}

// Navigate to login
const goLogin = document.getElementById('goLogin');
goLogin.addEventListener('click', () => {
  window.location = '/login';
});

// Loading state for register form
const registerForm = document.getElementById('registerForm');
const registerBtn = document.getElementById('registerBtn');

if (registerForm) {
  registerForm.addEventListener('submit', (e) => {
    // Optional: Add client-side validation before showing loading state
    const val = password.value;
    if (val.length < 6) {
      e.preventDefault();
      alert('Password must be at least 6 characters long');
      return;
    }
    
    registerBtn.classList.add('loading');
    registerBtn.innerHTML = '<i class="fas fa-spinner"></i> Creating account...';
  });
}

// Prevent form resubmission on page refresh
if (window.history.replaceState) {
  window.history.replaceState(null, null, window.location.href);
}

// Add smooth fade-in animation
document.addEventListener('DOMContentLoaded', () => {
  document.querySelector('.logo-container').style.opacity = '0';
  document.querySelector('.form-container').style.opacity = '0';
  
  setTimeout(() => {
    document.querySelector('.logo-container').style.transition = 'opacity 1s ease';
    document.querySelector('.form-container').style.transition = 'opacity 1s ease';
    document.querySelector('.logo-container').style.opacity = '1';
    document.querySelector('.form-container').style.opacity = '1';
  }, 100);
});
</script>

</body>
</html>