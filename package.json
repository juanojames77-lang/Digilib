{
  "name": "digilib",
  "version": "1.0.0",
  "description": "Digital Library System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run install-python-deps",
    "install-python-deps": "python3 -m pip install pypdf PyPDF2 joblib scikit-learn numpy",
    "test-python": "python3 -c \"import pypdf; print('pypdf version:', pypdf.__version__)\"",
    "test-ml": "echo 'computer science' > test.pdf && python3 ml/predict_cluster.py test.pdf"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.9",
    "express": "^4.19.2",
    "express-session": "^1.18.2",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "node-fetch": "^2.6.7",
    "pg": "^8.11.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}